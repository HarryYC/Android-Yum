<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000">

    <ImageView
        android:id="@+id/businessIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/ratingIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/countTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ratingIV"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ratingIV"
        android:text="Rating Count"
        android:layout_gravity="center_horizontal|bottom" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/businessIV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Name" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/likeIBtn"
        android:layout_below="@+id/ratingIV"
        android:layout_toEndOf="@+id/nameTV"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dislikeIBtn"
        android:layout_below="@+id/ratingIV"
        android:layout_toLeftOf="@+id/likeIBtn"
        android:layout_marginTop="50dp" />

</RelativeLayout>