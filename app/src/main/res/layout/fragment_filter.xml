<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efffffff"
        android:orientation="vertical">


        <Button
            android:id="@+id/cancel_filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_below="@+id/category_spinner"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="Distance"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/apply_options_button" />

        <Spinner
            android:id="@+id/distance_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"

            android:layout_marginTop="10dp"
            android:entries="@array/distance_dropdown_item"
            android:gravity="center_horizontal"
            android:spinnerMode="dialog"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/distance_spinner"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Category"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:entries="@array/category_dropdown_item"
            android:gravity="center_horizontal"
            android:spinnerMode="dialog"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/apply_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/cancel_filter_button"
            android:text="Apply"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This filter is optional to use. Values are set to default."
            android:id="@+id/textView4"
            android:singleLine="true"
            android:layout_below="@+id/cancel_filter_button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>