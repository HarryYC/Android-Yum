<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_layout"
    android:orientation="vertical"
    tools:context="app.team3.t3.Setting">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_setting"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/yum_red"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <TextView
            android:id="@+id/toolbar_title"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/setting_toolbar_text" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Switch
            android:id="@+id/sound_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/border_style"
            android:padding="32dp"
            android:text="@string/sound_switch_text" />


        <Switch
            android:id="@+id/vibrate_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/border_style"
            android:padding="32dp"
            android:text="@string/vibrate_switch_text" />

    </LinearLayout>
</LinearLayout>
