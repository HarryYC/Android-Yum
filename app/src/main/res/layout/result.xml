<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text" />

    <Button
        android:id="@+id/save_result_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="20dp"
        android:onClick="onSaveToHistory"
        android:text="Like" />

    <Button
        android:id="@+id/back_to_main"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/save_result_button"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/save_result_button"
        android:onClick="onBackToMainClick"
        android:text="Dislike" />

    <Button
        android:id="@+id/history"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/back_to_main"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/back_to_main"
        android:onClick="onHistoryClick"
        android:text="History" />
</RelativeLayout>